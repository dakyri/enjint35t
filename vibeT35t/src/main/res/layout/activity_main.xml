<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.openavionics.enginevibet35t.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer Test Bed"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:layout_below="@+id/deviceDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/xValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Y"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/yValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/xValue"
        android:layout_alignLeft="@+id/xValue"
        android:layout_alignStart="@+id/xValue"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Z"
        android:id="@+id/textView5"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/zValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/yValue"
        android:layout_alignStart="@+id/yValue"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Mag"
        android:id="@+id/textView7"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/magValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="t"
        android:id="@+id/textView9"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/magValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/tValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/magValue"
        android:layout_alignStart="@+id/magValue"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/srValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/tValue"
        android:layout_alignLeft="@+id/tValue"
        android:layout_alignStart="@+id/tValue"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="sampe rate"
        android:id="@+id/textView6"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*device*"
        android:id="@+id/deviceDescription"
        android:textSize="12sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/errorView"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#f20808"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravity Filter"
        android:id="@+id/enableGFilter"
        android:checked="false"
        android:textSize="10sp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editGFilterAlpha"
        android:textSize="10sp"
        android:layout_alignTop="@+id/enableGFilter"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="alpha"
        android:id="@+id/textView8"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/editGFilterAlpha"
        android:layout_alignBottom="@+id/editGFilterAlpha"
        android:layout_toRightOf="@+id/enableGFilter"
        android:layout_toEndOf="@+id/enableGFilter"
        android:gravity="end"
        android:textAlignment="textEnd"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="g"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:id="@+id/gValue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_below="@+id/srValue"
        android:layout_alignLeft="@+id/srValue"
        android:layout_alignStart="@+id/srValue"/>

</RelativeLayout>
